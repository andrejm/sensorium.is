{% set showcase_image = page.media.images|first.grayscale().contrast(20).brightness(-100).colorize(0,0,0) %}
{% if showcase_image %}
	<div class="modular-row showcase flush-top" style="background-image: url({{ showcase_image.url }});">
{% else %}
<div class="modular-row showcase">
{% endif %}
	{% if page.header.showAnimatedLogotype %}
		{% include 'partials/atoms/animatedLogotype.html.twig' %}
	{% endif %}
    {{ content }}

    {% for button in page.header.buttons %}
    	{% include 'partials/atoms/button.html.twig' with {'button': button} %}
    {% endfor %}

</div>